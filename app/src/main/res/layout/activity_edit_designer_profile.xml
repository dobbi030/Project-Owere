<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btn_edit_designer_profile_cancel"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:text="@string/edit_profile"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_edit_designer_profile_complete"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/complete"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_designer_profile_add_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_white_background"
        android:backgroundTint="@color/gray_C4C4C4"
        android:src="@drawable/ic_add_a_photo"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="@id/btn_edit_designer_profile_cancel"
        app:layout_constraintTop_toBottomOf="@id/btn_edit_designer_profile_cancel"
        app:layout_constraintWidth_percent="0.194" />

    <TextView
        android:id="@+id/txt_edit_designer_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/name"
        android:textColor="@color/gray_939393"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/btn_edit_designer_profile_cancel"
        app:layout_constraintTop_toBottomOf="@id/btn_designer_profile_add_photo" />

    <EditText
        android:id="@+id/edit_txt_edit_designer_profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxEms="12"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor_black_1_half_dp"
        android:textSelectHandle="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_designer_profile_add_photo"
        app:layout_constraintTop_toTopOf="@id/txt_edit_designer_profile_name"
        tools:text="김철수" />

    <TextView
        android:id="@+id/txt_edit_designer_profile_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/area"
        android:textColor="@color/gray_939393"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/btn_edit_designer_profile_cancel"
        app:layout_constraintTop_toBottomOf="@id/txt_edit_designer_profile_name" />

    <TextView
        android:id="@+id/btn_edit_designer_profile_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:drawableTint="@color/gray_020202"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/edit_txt_edit_designer_profile_name"
        app:layout_constraintTop_toTopOf="@id/txt_edit_designer_profile_area"
        tools:text="경기도 하남시 미사동" />

    <TextView
        android:id="@+id/txt_edit_designer_profile_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/introduce_myself"
        android:textColor="@color/gray_939393"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/btn_edit_designer_profile_cancel"
        app:layout_constraintTop_toBottomOf="@id/txt_edit_designer_profile_area" />

    <EditText
        android:id="@+id/edit_txt_edit_designer_profile_introduction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor_black_1_half_dp"
        android:textSelectHandle="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/edit_txt_edit_designer_profile_name"
        app:layout_constraintTop_toTopOf="@id/txt_edit_designer_profile_introduction"
        tools:text="안녕하세요. 미용업계 1년차 경력의 디자이너 김철수입니다. 디테일함에 한 끗 차이의 디자인을 선물해 드리겠습니다.전화번호 010-1234-5678" />
</androidx.constraintlayout.widget.ConstraintLayout>