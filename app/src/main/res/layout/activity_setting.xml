<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.userMain.mypageActivity.NoticeActivity">

    <ImageView
        android:id="@+id/event_goback_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환경설정"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="19dp"
        android:textStyle="bold"
        />
    
    <TextView
        android:id="@+id/payment_setting"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:text="결제수단 관리"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="20dp"
        />

    <View
        android:id="@+id/setting_line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:background="#CECECE"
        app:layout_constraintTop_toBottomOf="@+id/payment_setting"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/refund_setting"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:text="환불 계좌 관리"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_line1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        />

    <View
        android:id="@+id/setting_line2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="#CECECE"
        app:layout_constraintTop_toBottomOf="@+id/refund_setting"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/setting_alarm_setting"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:text="알림 설정"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_line2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        />

    <View
        android:id="@+id/setting_line3"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="#CECECE"
        app:layout_constraintTop_toBottomOf="@+id/setting_alarm_setting"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/cookie_delete"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:text="쿠키 삭제"
        android:textColor="#939393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_line3"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>


    <View
        android:id="@+id/setting_line4"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="#CECECE"
        app:layout_constraintTop_toBottomOf="@+id/cookie_delete"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/setting_logout"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:text="로그아웃"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_line4"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_logout"
        android:background="#F8F8F8"

        >
        <TextView
            android:id="@+id/setting_quit_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="탈퇴하기"
            android:textColor="#ED3431"
            android:textSize="14sp"
            android:gravity="center"/>

    </LinearLayout>
    







</androidx.constraintlayout.widget.ConstraintLayout>