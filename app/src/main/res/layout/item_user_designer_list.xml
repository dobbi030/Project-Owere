<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp">


    <ImageView
        android:id="@+id/image_user_designer"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_user_designer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="김철수 디자이너"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@id/text_user_designer_review_count"
        app:layout_constraintStart_toEndOf="@id/image_user_designer"
        app:layout_constraintTop_toTopOf="@id/image_user_designer" />

    <TextView
        android:id="@+id/text_user_designer_review_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="리뷰(50+)"
        app:layout_constraintBottom_toTopOf="@id/text_user_designer_matching"
        app:layout_constraintStart_toStartOf="@id/text_user_designer_name"
        app:layout_constraintTop_toBottomOf="@id/text_user_designer_name" />

    <View
        android:id="@+id/divider_user_designer"
        android:layout_width="1.5dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:background="@color/gray_cc"
        app:layout_constraintBottom_toBottomOf="@id/text_user_designer_review_count"
        app:layout_constraintStart_toEndOf="@id/text_user_designer_review_count"
        app:layout_constraintTop_toTopOf="@id/text_user_designer_review_count" />

    <TextView
        android:id="@+id/text_user_designer_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="서울시 송파구 가락동"
        app:layout_constraintBottom_toBottomOf="@+id/text_user_designer_review_count"
        app:layout_constraintStart_toEndOf="@id/divider_user_designer"
        app:layout_constraintTop_toTopOf="@+id/text_user_designer_review_count" />

    <TextView
        android:id="@+id/text_user_designer_matching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/blue_main_background"
        android:padding="2dp"
        android:text="매칭률 98%"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/image_user_designer"
        app:layout_constraintStart_toStartOf="@id/text_user_designer_name"
        app:layout_constraintTop_toBottomOf="@id/text_user_designer_review_count" />

    <TextView
        android:id="@+id/text_user_designer_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/purple_button"
        android:text="★★★★☆"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/text_user_designer_matching"
        app:layout_constraintTop_toTopOf="@id/text_user_designer_matching" />
</androidx.constraintlayout.widget.ConstraintLayout>