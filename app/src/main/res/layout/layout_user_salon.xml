<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp">


    <ImageView
        android:id="@+id/favoriteSalonImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/favoriteSalonNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="김철수 디자이너"
        app:layout_constraintBottom_toTopOf="@id/favoriteDesignerReviewTextView"
        app:layout_constraintStart_toEndOf="@id/favoriteSalonImageView"
        app:layout_constraintTop_toTopOf="@id/favoriteSalonImageView"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/favoriteDesignerReviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="리뷰(50+)"
        app:layout_constraintBottom_toTopOf="@id/favoriteSalonAddressTextView"
        app:layout_constraintStart_toStartOf="@id/favoriteSalonNameTextView"
        app:layout_constraintTop_toBottomOf="@id/favoriteSalonNameTextView" />

    <View
        android:id="@+id/favoriteSalonDivider0"
        android:layout_width="1.5dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:background="@color/gray_cc"
        app:layout_constraintBottom_toBottomOf="@id/favoriteDesignerReviewTextView"
        app:layout_constraintStart_toEndOf="@id/favoriteDesignerReviewTextView"
        app:layout_constraintTop_toTopOf="@id/favoriteDesignerReviewTextView" />

    <TextView
        android:id="@+id/favoriteSalonRatingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="★★★★☆"
        app:layout_constraintBottom_toBottomOf="@+id/favoriteDesignerReviewTextView"
        app:layout_constraintStart_toEndOf="@id/favoriteSalonDivider0"
        app:layout_constraintTop_toTopOf="@+id/favoriteDesignerReviewTextView" />

    <TextView
        android:id="@+id/favoriteSalonAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울시 송파구 가락동 헬리오시티 B동 3층"
        app:layout_constraintBottom_toTopOf="@+id/favoriteSalonCutTextView"
        app:layout_constraintStart_toStartOf="@id/favoriteDesignerReviewTextView"
        app:layout_constraintTop_toBottomOf="@id/favoriteDesignerReviewTextView" />

    <TextView
        android:id="@+id/favoriteSalonCutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커트 12000원"
        app:layout_constraintBottom_toBottomOf="@id/favoriteSalonImageView"
        app:layout_constraintStart_toStartOf="@+id/favoriteSalonAddressTextView"
        app:layout_constraintTop_toBottomOf="@+id/favoriteSalonAddressTextView" />

    <View
        android:id="@+id/favoriteSalonDivider1"
        android:layout_width="1.5dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:background="@color/gray_cc"
        app:layout_constraintBottom_toBottomOf="@id/favoriteSalonCutTextView"
        app:layout_constraintStart_toEndOf="@id/favoriteSalonCutTextView"
        app:layout_constraintTop_toTopOf="@id/favoriteSalonCutTextView" />

    <TextView
        android:id="@+id/favoriteSalonPermTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="펌 20000원"
        app:layout_constraintStart_toStartOf="@+id/favoriteSalonDivider1"
        app:layout_constraintTop_toTopOf="@+id/favoriteSalonCutTextView" />

    <View
        android:id="@+id/favoriteSalonDivider2"
        android:layout_width="1.5dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:background="@color/gray_cc"
        app:layout_constraintBottom_toBottomOf="@id/favoriteSalonPermTextView"
        app:layout_constraintStart_toEndOf="@id/favoriteSalonPermTextView"
        app:layout_constraintTop_toTopOf="@id/favoriteSalonPermTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="염색 23000원"
        app:layout_constraintStart_toStartOf="@+id/favoriteSalonDivider2"
        app:layout_constraintTop_toTopOf="@+id/favoriteSalonCutTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>