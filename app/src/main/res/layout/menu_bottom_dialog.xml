<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="길이를 선택하세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        />

    <RadioGroup
        android:id="@+id/menu_bottom_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="16dp"
        >
        <RadioButton
            android:id="@+id/menuBottomRadio_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본 + 0"
            android:textSize="14sp"

            />
        <RadioButton
            android:id="@+id/menuBottomRadio_chin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="턱선 아래 + 10,000"
            android:textSize="14sp"
            />
        <RadioButton
            android:id="@+id/menuBottomRadio_shoulder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어깨선 아래 + 20,000"
            android:textSize="14sp"
            />
        <RadioButton
            android:id="@+id/menuBottomRadio_chest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가슴선 아래 + 30,000"
            android:textSize="14sp"
            />




    </RadioGroup>

    <TextView
        android:id="@+id/menu_bottom_complete_button"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_bottom_radiogroup"
        android:layout_marginHorizontal="16dp"
        android:text="선택완료"
        android:textSize="16sp"
        android:background="@drawable/button_background_purple"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"

        />







</androidx.constraintlayout.widget.ConstraintLayout>