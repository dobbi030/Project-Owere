<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="내 위치 설정"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="지역은 최소 1개 이상 최대 2개까지 설정 가능해요" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


        <TextView
            android:id="@+id/myPosition_SetButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/round_black_background"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="+"
            android:textSize="25dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/myPosition_SetButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/round_black_background"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="+"
            android:textSize="25dp"
            android:textStyle="bold"

            />


    </LinearLayout>


    <TextView

        android:id="@+id/myposition_keepButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/round_black_background"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="계속하기"
        android:textColor="@color/black"
        android:textSize="20sp" />


</LinearLayout>