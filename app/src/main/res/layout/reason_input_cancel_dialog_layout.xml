<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inputgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_black_fill_white_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/head_input_myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="직접 입력"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/grouping"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray_cc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/head_input_myself" />

        <LinearLayout
            android:layout_width="369dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/grouping">

            <EditText
                android:id="@+id/reason_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@color/white"
                android:hint="내용을 입력해주세요"
                android:textSize="12sp" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/button_so_cancel"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginTop="11.72dp"
        android:background="@drawable/button_background_purple"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="거절 하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/inputgroup"
        app:layout_constraintStart_toStartOf="@id/inputgroup"
        app:layout_constraintTop_toBottomOf="@id/inputgroup"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>

